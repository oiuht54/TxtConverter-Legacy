<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="TartarusCore.TxtConverter.SettingsController"
      spacing="15" prefWidth="350" prefHeight="200" styleClass="root">

    <HBox fx:id="titleBar" alignment="CENTER_LEFT" spacing="10" styleClass="custom-title-bar">
        <padding>
            <Insets left="10.0"/>
        </padding>
        <Label fx:id="lblTitle" text="Settings" styleClass="title-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button onAction="#handleClose" styleClass="window-button,close-button" text="X"/>
    </HBox>

    <VBox spacing="15">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <VBox spacing="5">
            <Label fx:id="lblLanguage" text="Language / Язык:"/>
            <ComboBox fx:id="languageCombo" maxWidth="Infinity"/>
        </VBox>

        <Region VBox.vgrow="ALWAYS"/>

        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="btnClose" text="Close" onAction="#handleClose" minWidth="80"/>
        </HBox>
    </VBox>
</VBox>